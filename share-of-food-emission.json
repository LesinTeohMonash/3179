{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Share of food Emission",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/LesinTeohMonash/3179/main/ne_110m_admin_0_countries.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "layer": [
    {
      "transform": [{"calculate": "'datum.Share' * 1000", "as": "Share*10000"}],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "darkgray"}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME_LONG",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/LesinTeohMonash/3179/main/share-of-food-emission-2019.csv"
            },
            "key": "Country Name",
            "fields": ["Share"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "field": "Share",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0, 0.2, 0.4, 0.6, 0.8, 1],
            "range": [
              "#347da0",
              "#45a2b9",
              "#6baed6",
              "#6b6ecf",
              "#5254a3",
              "#393b79"
            ]
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME_LONG",
            "type": "nominal",
            "title": "Country Name"
          },
          {"field": "Share", "type": "quantitative"}
        ]
      }
    }
  ],
  "config": {}
}